{{#layout}}

  <div class='container page-content'>
    <div class='row'>

      <div class='col-sm-9'>
        {{#each page.sections}}
          <h3 id='{{id}}'>{{title}}</h3>
          {{#markdown}}{{{body}}}{{/markdown}}
          <hr />
        {{/each}}
      </div>

      <div class='col-sm-3 hidden-xs'>
        <nav class='content-nav'>
        <ul class='nav'>
        {{#each page.sections}}
          <li>
            {{#link-to 'documentation' anchor=id}}
              {{title}}
            {{/link-to}}
          </li>
        {{/each}}
        </ul>
        </nav>
      </div>
    </div>
  </div>

{{/layout}}
