#!/usr/bin/env node

var resolve = require('resolve');

resolve('broccoli-site', {
  basedir: process.cwd()
}, function(err, broccoliSitePath) {
  var broccoliSite;
  if (err) {
    broccoliSite = require('../index');
  } else {
    broccoliSite = require(broccoliSitePath);
  }
  broccoliSite.cli();
});
